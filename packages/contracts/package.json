{
  "name": "@moshdao/contracts",
  "version": "1.0.0",
  "private": false,
  "description": "Contracts for Mosh DAO",
  "homepage": "https://www.mosh.lol",
  "bugs": {
    "url": "https://github.com/MoshDAO/MoshDAO/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoshDAO/MoshDAO.git"
  },
  "license": "MIT",
  "author": "Mosh DAO",
  "scripts": {
    "build": "yarn run clean && yarn build:sol && yarn build:ts",
    "build:sol": "yarn run compile",
    "build:ts": "tsc -p .",
    "clean": "yarn run clean:sol",
    "clean:sol": "hardhat clean",
    "compile": "hardhat compile --force",
    "coverage": "hardhat coverage",
    "deploy:cmd": "hardhat deploy --write true",
    "deploy:hardhat": "yarn run deploy:cmd --network hardhat",
    "deploy:local": "yarn run deploy:cmd --network localhost",
    "deploy:rinkeby": "yarn run deploy:cmd --network rinkeby",
    "deploy:ropsten": "yarn run deploy:cmd --network ropsten",
    "env:pull": "doppler secrets download --no-file --format env > .env",
    "export:hardhat": "hardhat export --export-all ../generated/contracts/hardhat_contracts.json",
    "hardhat": "hardhat",
    "node": "hardhat node --hostname 0.0.0.0 --show-accounts",
    "task:accounts": "hardhat accounts",
    "task:deploy:Game": "hardhat deploy:Game",
    "task:deploy:Greeter": "hardhat deploy:Greeter",
    "task:deploy:NFT": "hardhat deploy:NFT",
    "task:deploy:Wave": "hardhat deploy:Wave",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.7",
    "hardhat-abi-exporter": "^2.3.0",
    "hardhat-deploy": "^0.9.4",
    "hardhat-gas-reporter": "^1.0.4",
    "solc": "^0.8.9",
    "solidity-coverage": "^0.7.17",
    "tsconfig-paths": "^3.11.0"
  },
  "devDependencies": {
    "@float-capital/solidity-coverage": "^0.7.17",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typechain": "^5.2.0"
  }
}
